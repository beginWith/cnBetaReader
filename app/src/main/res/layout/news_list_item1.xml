<?xml version="1.0" encoding="utf-8"?>

<com.ywwxhz.hoder.NewsListItemHoderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/title_color"
        android:textSize="22sp" />

    <TextView
        style="@style/SubText"
        android:id="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/news_title"
        android:layout_toLeftOf="@+id/news_comments"
        android:layout_toStartOf="@+id/news_comments"
        android:ellipsize="end" />

    <TextView
        style="@style/SubText"
        android:id="@+id/news_comments"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/news_views"
        android:layout_toLeftOf="@+id/news_views"
        android:layout_toStartOf="@+id/news_views"
        android:drawableLeft="@drawable/ic_comments"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingRight="2dp" />

    <TextView
        style="@style/SubText"
        android:id="@+id/news_views"
        android:layout_width="56sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/news_time"
        android:drawableLeft="@drawable/ic_views"
        android:drawablePadding="2dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_time"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <com.ywwxhz.view.ExtImageView
            android:id="@+id/news_image"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"
            app:ex_enable="false" />

        <TextView
            android:id="@+id/news_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="1dp"
            android:maxLines="3"
            android:textSize="15sp" />
    </LinearLayout>


</com.ywwxhz.hoder.NewsListItemHoderView>